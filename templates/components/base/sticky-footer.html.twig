{% if hide_sticky_menu_bottom is defined and hide_sticky_menu_bottom == true %}
  <style>
    .fix-footer {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      z-index: 999;
      padding: 10px;
      height: 70px;
      display: grid;
      place-items: center;
    }
    
    .btn-add-panier {
      border-top-left-radius: 10px;
      border-bottom-left-radius: 10px;
      height: 30px;
      border: 0;
      font-weight: normal;
    }
    
    .btn-acheter {
      border-top-right-radius: 10px;
      border-bottom-right-radius: 10px;
      border: 0;
      height: 30px;
      font-weight: normal;
      background: yellow;
    }
    
    .btn-boutique {
      border-radius: 10px;
      border: 0;
      height: 30px;
      font-weight: normal;
      background-color: transparent !important;
      color: black;
    }
    
    .btn-boutique > i {
      font-size: 15px;
      color: black !important;
    }
    
    .cbg-light {
      background-color: #fff;
    }
  </style>

  <div class="fix-footer cbg-light container-fluid shadow-sm d-sm-block d-md-block d-lg-none d-xl-none d-xl-none">
    <div class="row">
      <div class="col-3">
        <a class="btn btn-boutique d-flex align-items-center" href="{{ path('app_tous_les_vendeurs') }}"><i class="d-icon-home"></i></a>
      </div>
      <div class="d-flex col-9">
        <button class="btn btn-add-panier d-flex align-items-center text-dark">Panier</button>
        <button class="btn btn-acheter d-flex align-items-center text-dark">Acheter</button>
      </div>
    </div>
  </div>

