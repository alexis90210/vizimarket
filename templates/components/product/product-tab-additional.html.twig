<div class="tab-pane" id="product-tab-additional">
  <table class="table">
    <tbody>
      {% if produit.getMarque != null %}
        <tr class="py-5">
          <th class="font-weight-semi-bold text-dark pl-0">Marque</th>
          <td class="pl-4">{{ produit.getMarque.getNom }}</td>
        </tr>
      {% endif %}
      {% if produit.getProduitType == 2 %}
        <tr class="py-5">
          <th class="font-weight-semi-bold text-dark pl-0">Couleur</th>
          <td class="pl-4">Rouge</td>
        </tr>
        <tr class="py-5">
          <th class="font-weight-semi-bold text-dark pl-0">Taille</th>
          <td class="pl-4">L, XL</td>
        </tr>
      {% endif %}
    </tbody>
  </table>
</div>
