						<a href="{{path('app_product',{'id':autre.getId})}}">
							<img src="{{ autre.getImage}}" alt="product" width="165" height="184">
						</a>
					</figure>
					<div class="product-details">
						<h3 class="product-name">
							<a href="{{path('app_product',{'id':autre.getId})}}">{{autre.getNom}}</a>
						</h3>
						<div class="product-price">
							<span class="price">{{autre.getTarifRegulier}}</span>
						</div>
						<div class="ratings-container">
							<div class="ratings-full">
								<span class="ratings" style="width:80%"></span>
								<span class="tooltiptext tooltip-top"></span>
							</div>
						</div>
					</div>
				</div>
