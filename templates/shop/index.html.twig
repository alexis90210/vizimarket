{% extends 'base.html.twig' %}

{% block title %}Shop
{% endblock %}

{% block body %}
	<main class="main">
		<nav class="breadcrumb-nav">
			<div class="container">
				<ul class="breadcrumb">
					<li>
						<a href="#">
							<i class="d-icon-home"></i>
						</a>
					</li>
					<li>Tous les produits</li>
				</ul>
			</div>
		</nav>
		<div class="page-content mb-10 pb-2">
			<div class="container">

			{% if produits|length > 0 %}
			
				<div class="shop-boxed-banner banner mb-8 mb-lg-7" style="background-image: url('{{produits[0].getImage}}'); background-color: #ECEDEF;">
					<div class="banner-content">
						<h4 class="banner-subtitle font-weight-semi-bold ls-m text-uppercase text-secondary mb-3">
							{{ produits[0].getNom}}</h4>
						<h1 class="banner-title font-weight-bold ls-m mb-6">Découvrez nos produits de qualité</h1>
						<a href="{{path('app_product', {'id': produits[0].id } ) }}" class="btn btn-dark btn-outline btn-rounded">Acheter maintenant<i class="d-icon-arrow-right"></i>
						</a>
					</div>
				</div>

				{% else %}

				<div class="shop-boxed-banner banner mb-8 mb-lg-7" style="background-image: url('theme/images/demos/demo-market1/banner/shopbanner.jpg'); background-color: #ECEDEF;">
					<div class="banner-content">
						<h4 class="banner-subtitle font-weight-semi-bold ls-m text-uppercase text-secondary mb-3">
							Winter Season's</h4>
						<h1 class="banner-title font-weight-bold ls-m mb-6">Découvrez notre matériel de ski</h1>
						<a href="#" class="btn btn-dark btn-outline btn-rounded">Acheter maintenant<i class="d-icon-arrow-right"></i>
						</a>
					</div>
				</div>
					
					{% endif %}
				
				<!-- End Shop banner-->
<div class="brands-wrapper bg-white pl-md-4 pr-md-4 mb-10 appear-animate" data-animation-options="{'name': 'fadeIn'}">
	<div class="owl-carousel owl-theme owl-nav-inner row cols-xl-6 cols-lg-5 cols-md-4 cols-sm-3 cols-1" data-owl-options="{
						                                'nav': true,
						                                'dots': false,
						                                'margin': 12,
						                                'loop': true,
						                                'responsive': {
						                                    '0': {
						                                        'items': 2
						                                    },
						                                    '576': {
						                                        'items': 3
						                                    },
						                                    '768': {
						                                        'items': 4
						                                    },
						                                    '992': {
						                                        'items': 6
						                                    }
						                                }
						                            }">
		{% for marque in marques %}
			<figure>
				<img src="{{ marque.getLogo}}" alt="Brand" width="213" height="100"/>
		    </figure>
		{% endfor %}
	</div>
</div>
				<!-- End Brand -->
				<div class="row cols-xl-8 cols-lg-6 cols-md-4 cols-sm-3 cols-2">

				{% for categorie in categories %}
					<div class="category-wrap mb-4">
						<div class="category category-icon">
							<a href="{{ path('app_produit_scategorie',{'id':categorie.getId}) }}">
								<figure class="categroy-media">
									<img src="{{ categorie.getImage}}" alt="Brand" width="213" height="100"/>
								</figure>
								<div class="category-content">
									<h4 class="category-name">{{ categorie.getNom}}</h4>
								</div>
							</a>
						</div>
					</div>
				{% endfor %}
					
		
				</div>
				<!-- End Category icon -->
				<nav class="toolbox toolbox-horizontal sticky-toolbox sticky-content fix-top pt-2">
					<aside class="sidebar sidebar-fixed shop-sidebar">
						<div class="sidebar-overlay"></div>
						<a class="sidebar-close" href="#">
							<i class="d-icon-times"></i>
						</a>
						<div class="sidebar-content toolbox-left">
							<div class="toolbox-item select-menu">
								<a class="select-menu-toggle" href="#">Sélectionnez la taille</a>
								<ul class="filter-items">
									<li>
										<a href="#">Très grand</a>
									</li>
									<li>
										<a href="#">Grand</a>
									</li>
									<li>
										<a href="#">Moyen</a>
									</li>
									<li>
										<a href="#">Petit</a>
									</li>
								</ul>
							</div>
							<div class="toolbox-item select-menu">
								<a class="select-menu-toggle" href="#">Sélectionnez la couleur</a>
								<ul class="filter-items">
									<li>
										<a href="#">Noir</a>
									</li>
									<li>
										<a href="#">Bleu</a>
									</li>
									<li>
										<a href="#">Marron</a>
									</li>
									<li>
										<a href="#">Vert</a>
									</li>
								</ul>
							</div>
							<div class="toolbox-item select-menu">
								<a class="select-menu-toggle" href="#">Sélectionner le prix</a>
								<ul class="filter-items filter-price">
									<li>
										<a href="#">€0.00 - €50.00</a>
									</li>
									<li>
										<a href="#">€50.00 - €100.00</a>
									</li>
									<li>
										<a href="#">€100.00 - €200.00</a>
									</li>
									<li>
										<a href="#">€200.00+</a>
									</li>
								</ul>
							</div>
						</div>
					</aside>
					<div class="toolbox-left">
						<a href="#" class="toolbox-item left-sidebar-toggle btn btn-sm btn-outline btn-primary btn-rounded btn-icon-right d-lg-none">
							Filter<i class="d-icon-arrow-right"></i>
						</a>
						<div class="toolbox-item toolbox-sort select-menu">
							<select name="orderby" class="form-control ls-normal">
								<option value="default" selected="selected">Tri par défaut</option>
								<option value="popularity">Les plus populaires</option>
								<option value="rating">Note moyenne</option>
								<option value="date">Dernier</option>
								<option value="price-low">Trier le prix à terme le plus bas</option>
								<option value="price-high">Trier le prix à terme le plus élevé</option>
								<option value="">Effacer le tri personnalisé</option>
							</select>
						</div>
					</div>
					<div class="toolbox-right">
						<div class="toolbox-item toolbox-show select-box text-dark">
							<label>show :</label>
							<select name="count" class="form-control">
								<option value="12">10</option>
								<option value="24" selected>15</option>
								<option value="36">20</option>
								<option value="36">30</option>
							</select>
						</div>
						<div class="toolbox-item toolbox-layout">
							<a href="#" class="d-icon-mode-list btn-layout"></a>
							<a href="#" class="d-icon-mode-grid btn-layout active"></a>
						</div>
					</div>
				</nav>
				<!-- End Toolbox -->
				<div class="select-items">
					<a href="#" class="filter-clean text-primary">Clean All</a>
				</div>
				<div class="row product-wrapper cols-xl-5 cols-lg-4 cols-md-3 cols-2">

				{% for produit in produits %}
					
				
					<div class="product-wrap">
						<div class="product  product-border text-center cart-full">
								<figure class="product-media">
									<a href="{{path('app_product', {'id': produit.id } ) }}">
										<img src="{{produit.image}}" alt="product" width="240" height="270">
									</a>
									<div class="product-action-vertical">
										<a href="#" class="btn-product-icon btn-wishlist" title="Ajouter à la liste de souhaits">
											<i class="d-icon-heart"></i>
										</a>
										<a href="#" class="btn-product-icon btn-quickview" title="Aperçu rapide">
											<i class="d-icon-search"></i>
										</a>
										<a href="#" class="btn-product-icon btn-compare" title="Compare">
											<i class="d-icon-compare"></i>
										</a>
									</div>
								</figure>
								<div class="product-details">
									<span class="product-id" style="opacity:0;">0000{{ produit.getId }}</span>
									<h3 class="product-name">
										<a href="{{path('app_product', {'id': produit.id } ) }}">{{ produit.nom}}</a>
									</h3>

										{% if produit.getProduitType ==2 %}
											
											<!--<div class="product-price">
											<ins class="new-price promo-price">{{ produit.getTarifPromo}}</ins>
											<del class="old-price prix-regulier">{{ produit.getTarifRegulier}}</del>
											</div> -->

										{% else %}
											
											<div class="product-price">
											<ins class="new-price promo-price">{{ produit.getTarifPromo}}€</ins>
											<del class="old-price prix-regulier">{{ produit.getTarifRegulier}}€</del>
											</div>

										{% endif %}
									

									<div class="ratings-container">
										<div class="ratings-full">
											<span class="ratings" style="width:0%"></span>
											<span class="tooltiptext tooltip-top"></span>
										</div>

										<a href="{{path('app_product', {'id': produit.id } ) }}" class="rating-reviews">( 0 Commentaires )</a>
									</div>

									<a href="#" class="btn-product btn-cart" data-toggle="modal" data-target="#addCartModal" title="Ajouter au panier">
										<i class="d-icon-bag"></i>Ajouter au panier</a>
								</div>
							</div>
					</div>

					{% endfor %}
					

				</div>
				<!-- End Product -->
				<nav class="toolbox toolbox-pagination mt-4">
					<p class="show-info d-block">Affichage<span>1-15 de 91</span>
						produits</p>
					<ul class="pagination">
						<li class="page-item disabled">
							<a class="page-link page-link-prev" href="#" aria-label="Previous" tabindex="-1" aria-disabled="true">
								<i class="d-icon-arrow-left"></i>Prev
							</a>
						</li>
						<li class="page-item active" aria-current="page">
							<a class="page-link" href="#">1</a>
						</li>
						<li class="page-item">
							<a class="page-link" href="#">2</a>
						</li>
						<li class="page-item">
							<a class="page-link" href="#">3</a>
						</li>
						<li class="page-item">
							<a class="page-link page-link-next" href="#" aria-label="Next">
								Next<i class="d-icon-arrow-right"></i>
							</a>
						</li>
					</ul>
				</nav>
			</div>
		</div>

	</main>
{% endblock %}
